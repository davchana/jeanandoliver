---
---
{
  "type": "FeatureCollection",
  "features": [
    {% for post in site.posts %}
    {% assign src = post.image_index | prepend: '/images/' | append: '.jpg' %}
    {
      "type": "Feature",
      "properties": {
        "title": "{{ post.title }}",
        "url": "{{ post.url }}",
        "src": "{{ src | imgix_url: fit: 'crop', w: 250, h: 168, q: 45 }}",
        "alt": "{{ post.title }}",
        "iconSize": [96, 64]
      },
      "geometry": {
        "type": "Point",
        "coordinates": [{{ post.longitude }}, {{ post.latitude }}]
      }
    }{% if forloop.rindex > 1 %},{% endif%}
    {% endfor %}
  ]
}
